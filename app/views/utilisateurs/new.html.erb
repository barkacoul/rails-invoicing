<div>
    <div>
    <h2>Créer un compte d'utilisateur</h2>
    </div>
    
    <div>
        <%= form_for :utilisateur, :url => {:action => "create"} do |f|  %>
        
        <div>
            <%= f.label :pnom, "Prenom" %>: &nbsp;
            <%= f.text_field :pnom %>
        </div>
        <br />
        
        <div>
            <%= f.label :nom %>: &nbsp;
            <%= f.text_field :nom %>
        </div>
        <br />
        
        <div>
            <%= f.label :pseudo %>: &nbsp;
            <%= f.text_field :pseudo %>
        </div>
        <br />
        
        <div>
            <%= f.label :mot_de_passe %>: &nbsp;
            <%= f.password_field :mot_de_passe %>
        </div>
        <br />
        
        <div>
            <%= f.label :mot_de_passe_confirmation, "verification_de_mot_de_passe" %>: &nbsp;
            <%= f.password_field :mot_de_passe_confirmation %>: &nbsp;
        </div>
        <br />
        
        <div>
            <%= f.label :email %>: &nbsp;
            <%= f.text_field :email %>
        </div>
        <br />
        
        <div>
            <%= f.label :pays %>: &nbsp;
            <%= f.text_field :pays %>
        </div>
        <br />
        
        <%= f.submit "Créer utilisateur" %>
        <% end %>
    </div>
    
</div>