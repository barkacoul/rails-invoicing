<h2>Mise à jour d'informations du fournisseur: <%= @fournisseur.nom %> </h2>

<%= form_for :fournisseur, :url => {:action => 'update', :utilisateur_id => @current_user.id, :id => @fournisseur.id}, :method => :patch do |form| %>

<fieldset>
    <legend>Informations du fournisseur</legend>
<%= render :partial => 'form', :locals => {:f => form} %>
<div>
    <%= form.submit "Mettre à jour", :class => "submit" %> &nbsp;
    <%= link_to "Annuler", {:action => "show", :utilisateur_id => @current_user.id, :id => @fournisseur.id}, :class => "cancel" %>
</div>
</fieldset>



<% end %>